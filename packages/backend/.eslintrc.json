{
	"env": {
		"node": true,
		"commonjs": true,
		"es2021": true,
		"jest": true
	},
	"extends": [
		"airbnb-base"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"semi": [
            "error",
            "always"
        ],
		"indent": [
			"error",
            2
        ],
		"no-unused-vars": "warn",
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"ts": "never"
			}
		],
		"no-tabs": "off",
		"radix": "off",
		"arrow-parens": "off",
		"linebreak-style": "off",
		"import/prefer-default-export": "off",
		"arrow-body-style": "off",
		"no-undef": "off",
		"no-console": "off",
		"import/no-extraneous-dependencies": "warn",
		"global-require": "warn"
	},
	"settings": {
		"import/resolver": {
			"typescript": {}
		}
	}
}